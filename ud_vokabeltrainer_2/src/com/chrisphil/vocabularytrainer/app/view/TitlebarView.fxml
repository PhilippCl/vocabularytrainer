<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chrisphil.vocabularytrainer.app.controller.TitleBar">
   <top>
      <HBox prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="titleLabel" text="  Vokabeltrainer" HBox.hgrow="NEVER" />
            <Pane HBox.hgrow="ALWAYS" />
            <JFXButton fx:id="backButton" buttonType="RAISED" />
            <JFXButton fx:id="homeButton" buttonType="RAISED" />
            <JFXButton fx:id="helpButton" buttonType="RAISED" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </HBox>
   </top>
   <center>
      <AnchorPane>
         <children>
            <StackPane fx:id="containerPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" BorderPane.alignment="CENTER" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
